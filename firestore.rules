rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Hjelpefunksjoner ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Sjekker om brukeren har admin-rolle i databasen
    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', null) == 'admin';
    }

    function isContributor() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', null) == 'contributor';
    }
    // --- Brukere og Galleri ---
    match /users/{userId} {
      // Alle kan lese profilinfo (navn/bilde) - nødvendig for at admin skal kunne liste brukere
      // og for at vi skal kunne sjekke roller
      // MEN: Hvis status er 'pending_deletion', kan ingen (unntatt admin) lese den
      allow read: if (resource == null || resource.data.get('status', 'active') == 'active' || isAdmin()) && true;
      
      // Eier kan endre navn/bilde, men IKKE sin egen rolle og IKKE hvis de er under sletting
      allow create: if isOwner(userId) && (!request.resource.data.keys().hasAny(['role']) || request.resource.data.role == 'member');
      allow update: if isOwner(userId) && 
                      (resource.data.get('status', 'active') == 'active') &&
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'deletionRequestedAt']);
      allow delete: if isOwner(userId) && (resource.data.get('status', 'active') == 'active');
      
      // Admin kan endre alt, inkludert roller og slettestatus
      allow write: if isAdmin(); 

      // Personlig galleri
      match /gallery_images/{imageId} {
        // Blokker tilgang hvis brukeren er under sletting (unntatt for admin)
        allow read: if (get(/databases/$(database)/documents/users/$(userId)).data.get('status', 'active') == 'active' || isAdmin());
        allow write: if (isOwner(userId) && get(/databases/$(database)/documents/users/$(userId)).data.get('status', 'active') == 'active') || isAdmin();
      }
    }

    // --- Innhold på siden (Offentlig Galleri osv) ---
    match /site_content/{document=**} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // --- Arkiv (Kun Admin) ---
    match /archive/{docId} {
      allow read, write: if isAdmin();
    }
    
    // --- Feed ---
    match /artifacts/{appId}/public/data/feed/{postId} {
      allow read: if isSignedIn(); // Only members/admins
      allow create: if isAdmin() || isContributor();
      allow update, delete: if isAdmin();

      // Kommentarer
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && (isAdmin() || request.auth.uid == resource.data.userId);
      }

      // Reaksjoner (tommel opp)
      match /reactions/{userId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // --- Arrangementer ---
    match /artifacts/{appId}/public/data/arrangements/{arrangementId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isContributor();
      allow update, delete: if isAdmin();

      // RSVP
      match /rsvp/{userId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}
