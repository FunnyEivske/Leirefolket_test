rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Hjelpefunksjoner ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Sjekker om brukeren har admin-rolle i databasen
    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', null) == 'admin';
    }
    // --- Brukere og Galleri ---
    match /users/{userId} {
      // Alle kan lese profilinfo (navn/bilde) - nødvendig for at admin skal kunne liste brukere
      // og for at vi skal kunne sjekke roller
      allow read: if true; 
      
      // Eier kan endre navn/bilde, men IKKE sin egen rolle
      allow create: if isOwner(userId) && (!request.resource.data.keys().hasAny(['role']) || request.resource.data.role == 'member');
      allow update: if isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      allow delete: if isOwner(userId);
      
      // (Opsjonelt) Admin kan endre alt, inkludert roller
      // allow write: if isAdmin(); 

      // Personlig galleri
      match /gallery_images/{imageId} {
        allow read: if true; // Alle (inkludert admin) må kunne se bildene
        allow write: if isOwner(userId) || isAdmin(); // Eier kan laste opp, admin kan slette (valgfritt)
      }
    }

    // --- Innhold på siden (Offentlig Galleri osv) ---
    match /site_content/{document=**} {
      allow read: if true;
      // Kun admin får endre hva som vises offentlig
      allow write: if isAdmin(); 
    }
    
    // --- Feed ---
    match /artifacts/{appId}/public/data/feed/{postId} {
      allow read: if true;
      allow write: if isAdmin(); // Vanligvis kun admin som poster nyheter
    }
  }
}