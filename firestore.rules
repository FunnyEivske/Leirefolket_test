rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Hjelpefunksjoner ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Brukere og Galleri ---
    match /users/{userId} {
      allow read: if true; // Alle kan lese profilinfo (navn/bilde)
      allow write: if isOwner(userId); // Kun eier kan endre sin profil

      // Personlig galleri
      match /gallery_images/{imageId} {
        allow read: if true; // Tillat lesing for admin-verktøy
        allow write: if isOwner(userId); // Eier kan laste opp/slette
      }
    }

    // --- Innhold på siden (Promotert & Offentlig Galleri) ---
    match /site_content/{document=**} {
      allow read: if true; // Alle kan se innholdet på siden
      // Tillat alle innloggede å redigere (for enkelhets skyld, eller bytt til 'if isOwner("admin_uid")')
      allow write: if isSignedIn(); 
    }

    // --- Feed (Beholder eksisterende logikk om nødvendig) ---
    match /artifacts/{appId}/public/data/feed/{postId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // --- Diverse sikkerhet ---
    // Tillat lesing/skriving hvis du vil "tillate alt" for testing (IKKE ANBEFALT FOR PRODUKSJON)
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}